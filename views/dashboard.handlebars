<div class="row">
  <div class="col-auto">
    <h2><span>Welcome to the Tech Blog, {{username}}</span></h2>
  </div>
</div>
<div class="row mt-4">
<div class="col-md-6">
  <h3>Post Something New:</h3>
  <form class="form new-post-form">
   <div class="form-control">
    <input class="form-input" type="text" id="post-title" name="post-title" placeholder="New Post Title" />
   </div>
   <div class="form-control">
    <textarea class="form-input" id="post-body" name="post-description" placeholder="Blog Post Content"></textarea>
   </div>
   <div class="form-control">
  <button type="submit" class ="btn btn-secondary">Post</button>
   </div>
  </form>
</div>
{{#if posts.length}}
<div class="col-md-6 post-list">
  <h3>Posts:</h3>
  {{#each posts and |post|}}
  <div class="row">
  <div class="col=md-8">
    <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
  </div>
  <div class="col-md-4">
    <button class="btn btn-danger" data-id"{{post.id}}">Delete Post</button>
  </div>
  </div>
  {{/each}}
</div>
{{/if}}
</div>
<script src="/public/js/new.js"></script>