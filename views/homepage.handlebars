{{#each posts as |post|}}

<div class="row">
  <div class="container posts-container">
    <div class="row justify-content-center">
      <div class="col-8">
        <h2>
        <a class="post-title" href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
      </div>
      <div class="col-4">
        <p class="postit text-right">Author: 
          {{post.user.username}}
          on
          {{format_date post.date_created}}
        </p>
      </div>
    </div>
    <div class="post-body">
      <p class="text-center post-body-content">
        {{post.description}}
      </p>
    </div>
  </div>
</div>
{{/each}}